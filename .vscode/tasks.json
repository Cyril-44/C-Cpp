{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Cpp Debug Build",
			"command": "/usr/bin/g++",
			"args": [
				"-std=c++2a",
				"-Wall",
				"-Wextra",
				"-Wconversion",
				"-Wshadow",
				"-Wsign-conversion",
				"-D_GLIBCXX_DEBUG",
				"-DDEBUG",
				"-fsanitize=address,undefined",
				"-fno-omit-frame-pointer",
				"-fdiagnostics-color=always",
				"-g3",
				"${file}",
				"-o",
				"${workspaceFolder}/.vscode/a.out",
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [ "$gcc" ],
			"group": "build",
			"detail": "compiler: /usr/bin/g++"
		},
		{
			"type": "shell",
			"label": "Cpp Release Build",
			"command": "/usr/bin/g++",
			"args": [
				"-std=c++14",
				"-Wall",
				"-O2",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [ "$gcc" ],
			"group": "build",
			"detail": "compiler: /usr/bin/g++"
		},
		{
			"type": "shell",
			"label": "Cpp RelWithDebInfo",
			"command": "/usr/bin/g++",
			"args": [
				"-std=c++17",
				"-g2",
				// "-O2",
				"${file}",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [ "$gcc" ],
			"group": "build",
			"detail": "compiler: /usr/bin/g++"
		},
		{
			"type": "shell",
			"label": "--!-- C/C++: g++ build --!--",
			"command": "/usr/bin/g++",
			"args": [
				"-std=c++2a",
				"-Wall",
				"-fdiagnostics-color=always",
				"-I${workspaceFolder}",
				"-g1",
				"-O2", 
				"${file}",
				"-o",
				"${fileBasenameNoExtension}", 
				"-lgmpxx",
				"-lgmp",
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/g++"
		},
		{
			"type": "shell",
			"label": "--!-- C: gcc build --!--",
			"command": "/usr/bin/gcc",
			"args": [
				"-std=c17",
				"-Wall",
				"-fdiagnostics-color=always",
				"-I${workspaceFolder}/gmp/bin/include",
				"-L${workspaceFolder}/gmp/bin/lib",
				"-O2", 
				// "-g3",
				"${file}",
				"-o",
				"${fileBasenameNoExtension}", 
				"-lgmp",
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/gcc"
		},
	]
}